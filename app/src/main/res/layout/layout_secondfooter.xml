<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_marginTop="30dp"
                        android:text="Payment Info"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        app:layout_constraintTop_toTopOf="parent" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_login2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:layout_marginTop="60dp"
                        android:text="Payment with Stripe"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        app:layout_constraintTop_toTopOf="@id/txt_login" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="45dp"
                        android:hint="Donation Amount"
                        android:fontFamily="@font/sergoeui"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_login2">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_name"
                            android:fontFamily="@font/sergoeui"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_email"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="25dp"
                        android:hint="Donation for Stone"
                        android:fontFamily="@font/sergoeui"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_name">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_email"
                            android:fontFamily="@font/sergoeui"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_number"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/sergoeui"
                        android:hint="Email"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_email">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_number"
                            android:fontFamily="@font/sergoeui"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_city"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="25dp"
                        android:hint="Name"
                        android:fontFamily="@font/sergoeui"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_number">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_city"
                            android:fontFamily="@font/sergoeui"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_state"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:fontFamily="@font/sergoeui"
                        android:layout_marginTop="25dp"
                        android:hint="Phone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_city">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_state"
                            android:fontFamily="@font/sergoeui"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txt_country"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sergoeui"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="25dp"
                        android:hint="Country"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_state">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_country"
                            android:fontFamily="@font/sergoeui"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_donationStripe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="15dp"
                        android:backgroundTint="@color/brown"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:fontFamily="@font/sergoeui"
                        android:paddingVertical="3dp"
                        android:text="Donation with stripe"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:cornerRadius="8dp"
                        app:layout_constraintTop_toBottomOf="@id/txt_country"
                        app:strokeColor="@color/light_blue"
                        app:strokeWidth="1dp" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_paytmAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="15dp"
                        android:backgroundTint="@color/white"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:fontFamily="@font/sergoeui"
                        android:paddingVertical="3dp"
                        android:text="Donation Amount"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        app:cornerRadius="8dp"
                        app:layout_constraintTop_toBottomOf="@id/btn_donationStripe"
                        app:strokeColor="@color/light_blue"
                        app:strokeWidth="1dp" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_donationPaytm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="15dp"
                        android:backgroundTint="@color/brown"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:fontFamily="@font/sergoeui"
                        android:paddingVertical="3dp"
                        android:text="Donation with Paytm"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:cornerRadius="8dp"
                        app:layout_constraintTop_toBottomOf="@id/btn_paytmAmount"
                        app:strokeColor="@color/light_blue"
                        app:strokeWidth="1dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>