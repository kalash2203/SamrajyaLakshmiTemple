<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_yellow"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:background="@color/light_yellow"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Donations"
            app:fontFamily="@font/segoe_ui_bold"

            android:textSize="@dimen/sp_20"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:textColor="@color/red"/>

        <HorizontalScrollView
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:paddingBottom="@dimen/sp_20"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingVertical="10dp"
                android:layout_width="wrap_content"
                android:weightSum="5"
                android:background="@color/grey_very_light"
                android:paddingHorizontal="@dimen/sp_30"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="DESCRIPTION"
                    app:fontFamily="@font/segoe_ui_bold"

                    android:textStyle="bold"
                    android:layout_marginHorizontal="@dimen/dp_30"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"

                    android:textColor="@color/black"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AMOUNT"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="@dimen/dp_30"
                    android:layout_weight="1"
                    app:fontFamily="@font/segoe_ui_bold"

                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"

                    android:textColor="@color/black"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_30"
                    android:layout_height="wrap_content"
                    android:text="TRANSACTION ID"
                    app:fontFamily="@font/segoe_ui_bold"

                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"

                    android:textColor="@color/black"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DATE"
                    app:fontFamily="@font/segoe_ui_bold"

                    android:layout_marginHorizontal="@dimen/dp_30"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"

                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INVOICE"
                    app:fontFamily="@font/segoe_ui_bold"

                    android:layout_marginHorizontal="@dimen/dp_30"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"

                    android:textColor="@color/black"/>
            </LinearLayout>
        </HorizontalScrollView>




        <include layout="@layout/layout_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"/>



    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>