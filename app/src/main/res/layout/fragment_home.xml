<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_yellow">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPgr_fragment_splash_intro_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="15dp"
            android:backgroundTint="@color/light_yellow">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dp_20"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/brown"
                    app:fontFamily="@font/segoe_ui_bold"
                    android:layout_marginHorizontal="20dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:text="POOJA/SEVA BOOKINGS"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="15dp"
            android:backgroundTint="@color/light_yellow">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dp_20"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/brown"
                    app:fontFamily="@font/segoe_ui_bold"
                    android:layout_marginHorizontal="20dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:text="DONATE FOR A CAUSE"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_20"

            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="15dp"
            android:backgroundTint="@color/light_yellow">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dp_20"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/brown"
                    app:fontFamily="@font/segoe_ui_bold"
                    android:layout_marginHorizontal="20dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:text="BECOME A VOLUNTEER"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/brown"
            app:fontFamily="@font/segoe_ui_bold"
            android:textAlignment="center"
            android:textSize="@dimen/dp_30"
            android:layout_height="wrap_content"
            android:text="TEMPLE STRUCTURE"
            />
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPgr_fragment_splash_intro_slider_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_counter_mantras"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/brown"
            app:fontFamily="@font/segoe_ui_bold"
            android:layout_marginHorizontal="20dp"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            android:text="INFORMATION CENTRES IN INDIA"
            />
       <androidx.appcompat.widget.AppCompatImageView
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:scaleType="fitXY"
           android:layout_marginHorizontal="@dimen/dp_20"
           app:srcCompat="@drawable/bangalore"
           android:layout_marginTop="@dimen/dp_30"
         />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/brown"
            app:fontFamily="@font/segoe_ui_bold"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="BENGALORE"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            app:fontFamily="@font/sergoeui"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:text="H.no: 276, Medahalli, K.R.Puram, Bangalore. Karnataka - 560049\nEmail: ic.bangalore@samrajyalakshmitemple.com"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="@dimen/dp_20"
            app:srcCompat="@drawable/hyderabad"
            android:layout_marginTop="@dimen/dp_30"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/brown"
            app:fontFamily="@font/segoe_ui_bold"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="HYDERABAD"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            app:fontFamily="@font/sergoeui"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:text="Plot no: 36, Gummadi, Nizampet, Hyderabad. Telangana - 500090
\nEmail: ic.hyderabad@samrajyalakshmitemple.com"
            />
        <include android:layout_marginTop="@dimen/dp_30"
            layout="@layout/layout_footer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />




    </LinearLayout>
</androidx.core.widget.NestedScrollView>