<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.UserPanelFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:background="@color/grey_very_light"
        android:weightSum="5"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:textColor="@color/black"
            android:text="Sr No."/>
        <TextView
            android:layout_marginStart="@dimen/dp_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="2.5"
            android:textColor="@color/black"
            android:text="Email"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="MAKE ADMIN"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="REMOVE USER/ ADMIN"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_user_panel"
        android:layout_width="match_parent"
        tools:listitem="@layout/item_user_panel"
        tools:itemCount="4"
        android:layout_height="wrap_content"/>




</LinearLayout>