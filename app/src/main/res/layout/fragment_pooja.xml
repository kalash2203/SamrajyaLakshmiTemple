<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_yellow">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPgr_fragment_splash_intro_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/brown"
            app:fontFamily="@font/segoe_ui_bold"
            android:textAlignment="center"
            android:textSize="@dimen/dp_30"
            android:layout_height="wrap_content"
            android:text="Pooja/Sevas will Begin Soon."
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_counter_mantras"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:layout_marginHorizontal="20dp"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="As the Temple is Under Construction Pooja/Sevas arenâ€™t started yet. Devotees who wish to be a part of Temple Construction can offer their offerings through our Donations Page.
"
            />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/brown"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:fontFamily="@font/sergoeui"
            android:paddingVertical="3dp"
            android:textAllCaps="false"
            android:text="Donations"
            android:textColor="@color/white"
            app:cornerRadius="10dp"
            app:strokeColor="@color/brown"
            app:strokeWidth="1dp" />

        <include android:layout_marginTop="@dimen/dp_30"
            layout="@layout/layout_footer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>